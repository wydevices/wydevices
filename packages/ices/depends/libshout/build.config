# Generic package building template.
#
# Remove not used variables.
#
# * Binaries will be searched on:
#    - Built packages
#    - STLinux binaries
#    - 'scripts' folder
#
# * Files in this folders will be
#   copied to final package:
#    - config-files
#    - static-files
#

# package name
NAME="libshout"

# package version
VERSION=2.3.1

# other packages that will be included
SUBPACKAGES=""

# package dependencies
DEPENDS="libogg libvorbis"

# url to download sources file
URL="http://downloads.xiph.org/releases/libshout/libshout-$VERSION.tar.gz"

# name of sources file
SRCFILE="libshout-$VERSION.tar.gz"

# sources dir
SRCDIR="libshout-$VERSION"

# actions before compilation
PRE_COMPILATION() {

BASEPATH=`pwd`

echo "BASEPATH: $BASEPATH"

}

# configure flags
CONFIGUREFLAGS="--host=sh4-linux \
		--prefix=/wymedia/usr \
		--disable-theora \
                --disable-speex "

POST_COMPILATION() {
cd $SRCDIR
make install
cd ..
}

# actions before building the wybox package
#PRE_WYBOX_PKG_BUILD() {

