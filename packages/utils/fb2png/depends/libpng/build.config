NAME="libpng"

VERSION="1.5.13"

URL="http://downloads.sourceforge.net/project/libpng/libpng15/$VERSION/libpng-$VERSION.tar.gz"

SRCFILE="libpng-$VERSION.tar.gz"

SRCDIR="libpng-$VERSION"

CONFIGUREFLAGS="--host=sh4-linux --disable-static
	--prefix=`pwd`/libpng-$VERSION"

POST_COMPILATION() {
	cd `pwd`/libpng-$VERSION
	sh4-linux-strip `pwd`/.libs/libpng15.so
	make install
}

