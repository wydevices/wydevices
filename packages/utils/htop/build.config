NAME=htop

VERSION=1.0.2

URL="https://github.com/wydevices/wydevices/blob/master/packages/source/htop-1.0.2.tar.gz?raw=true"
     
SRCFILE="$NAME-$VERSION.tar.gz"

SRCDIR="htop-$VERSION"

CONFIGUREFLAGS="--host=sh4-linux \
	--disable-unicode \
	--disable-native-affinity \
	cross_compiling=yes"

PRE_WYBOX_PKG_BUILD() {
	mkdir -p $PKGDIR/usr/lib/terminfo/l
	cp /opt/STM/STLinux-2.3/devkit/sh4/target/usr/share/terminfo/l/linux $PKGDIR/usr/lib/terminfo/l
}

BINARIES="htop"

DESTFILE="wybox-htop-$VERSION.tar.gz"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/htop
}

