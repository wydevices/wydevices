NAME=cifs-utils

VERSION=6.4

DEPENDS="samba"

URL="https://ftp.samba.org/pub/pub/linux-cifs/cifs-utils/$NAME-$VERSION.tar.bz2"

SRCFILE="$NAME-$VERSION.tar.bz2"

SRCDIR="$NAME-$VERSION"

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=/wymedia/usr \
	--disable-cifsupcall \
	--disable-cifscreds \
	--disable-cifsidmap \
	--disable-cifsacl \
	--without-libcap \
	CFLAGS=-I../../samba/samba-3.6.19/source3/include \
	LDFLAGS=-L../../samba/samba-3.6.19/source3/bin"

BINARIES="mount.cifs"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/mount.cifs
}
