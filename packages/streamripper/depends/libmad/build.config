# Generic package building template.
#
# Remove not used variables.
#
# * Binaries will be searched on:
#    - Built packages
#    - STLinux binaries
#    - 'scripts' folder
#
# * Files in this folders will be
#   copied to final package:
#    - config-files
#    - static-files
#

# package name
NAME="libmad"

# package version
VERSION=0.15.1b

# other packages that will be included
SUBPACKAGES=""

# package dependencies
DEPENDS=""

# url to download sources file
URL="http://downloads.sourceforge.net/project/mad/libmad/0.15.1b/libmad-0.15.1b.tar.gz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fmad%2Ffiles%2Flibmad%2F0.15.1b%2F&ts=1408993267&use_mirror=skylink"

# name of sources file
SRCFILE="libmad-$VERSION.tar.gz*"

# sources dir
SRCDIR="libmad-$VERSION"

# actions before compilation
#PRE_COMPILATION() {
#
#}

# configure flags
CONFIGUREFLAGS="--host=sh4-linux \
		--prefix=/wymedia/usr"

# actions before building the wybox package
#PRE_WYBOX_PKG_BUILD() {

#}

# binary files to include in final package
#BINARIES="libmad.so libmad.so.0.2.1 libmad.so.0"


POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/.libs/libmad*.so*
}

