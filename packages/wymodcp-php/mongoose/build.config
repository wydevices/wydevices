NAME="mongoose"

VERSION="4.1"

URL="https://github.com/centrena/wydevices/blob/master/packages/source/mongoose-4.1.tar.gz?raw=true"

SRCFILE="$NAME-$VERSION.tar.gz"

SRCDIR="$NAME-$VERSION/build"

PRE_COMPILATION() {
	cd $PKGDIR/$SRCDIR
	make COPT="-DNDEBUG -DNO_SSL" linux
}

BINARIES="mongoose"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/$BINARIES
}

