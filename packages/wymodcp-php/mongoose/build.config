NAME="mongoose"

VERSION="3.1"

URL="http://mongoose.googlecode.com/files/mongoose-3.1.tgz"

SRCFILE="mongoose-3.1.tgz"

SRCDIR="mongoose"

PRE_COMPILATION() {
	cd $PKGDIR/$SRCDIR
  sed -i 's/g++/sh4-linux-g++/g' Makefile
	make COPT="-DNDEBUG -DNO_SSL" linux
}

BINARIES="mongoose"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/$BINARIES
}

