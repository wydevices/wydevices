NAME="mongoose"

VERSION="3.7"

URL="http://mongoose.googlecode.com/files/mongoose-$VERSION.tgz"

SRCFILE="mongoose-$VERSION.tgz"

SRCDIR="mongoose"

PRE_COMPILATION() {
	cd $PKGDIR/$SRCDIR
	make COPT="-DNDEBUG -DNO_SSL" linux
}

BINARIES="mongoose"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/$BINARIES
}

