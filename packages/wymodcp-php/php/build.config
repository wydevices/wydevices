SRCFILE="php-5.2.13.tar.bz2"

SRCDIR="php-5.2.13"

PRE_COMPILATION() {

	export LIBS="-ldl"
}

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=/wymedia/usr \
	--disable-all \
	--with-libxml-dir=../depends/libxml2/libxml2-2.7.7 \
	--enable-libxml \
	--enable-simplexml \
	--enable-pdo \
	--with-pdo-sqlite"

BINARIES="php-cgi"

