NAME="php"

VERSION="5.2.14"

DEPENDS="libxml2"

URL="http://es2.php.net/get/php-5.2.14.tar.bz2/from/this/mirror"

SRCFILE="php-5.2.14.tar.bz2"

SRCDIR="php-5.2.14"

PRE_COMPILATION() {

	export LIBS="-ldl"
}

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=/wymedia/usr \
	--disable-all \
	--with-libxml-dir=../depends/libxml2/libxml2-2.7.8 \
	--enable-libxml \
	--enable-simplexml \
	--enable-pdo \
	--with-pdo-sqlite"

BINARIES="php-cgi"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/sapi/cgi/php-cgi
}
