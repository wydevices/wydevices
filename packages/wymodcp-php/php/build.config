NAME="php"

VERSION="5.6.8"

DEPENDS="libxml2"

URL="http://es1.php.net/get/$NAME-$VERSION.tar.gz/from/this/mirror"

SRCFILE="mirror"

SRCDIR="php-$VERSION"

PRE_COMPILATION() {
	export LIBS="-ldl"
}

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=/wymedia/usr \
	--disable-all \
	--with-libxml-dir=../depends/libxml2/libxml2-2.9.2 \
	--enable-sockets \
	--enable-libxml \
	--enable-simplexml \
	--enable-json \
	--enable-hash \
	--enable-pdo \
	--with-pdo-sqlite \
	--with-sqlite3 \
	--with-config-file-path=/wymedia/usr/etc \
	--disable-ipv6"

BINARIES="php-cgi"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/sapi/cgi/php-cgi
}
