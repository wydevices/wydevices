NAME="php"

VERSION="5.4.3"

DEPENDS="libxml2"

URL="http://fr.php.net/get/php-5.4.3.tar.bz2/from/this/mirror"

SRCFILE="php-$VERSION.tar.bz2"

SRCDIR="php-$VERSION"

PRE_COMPILATION() {
	export LIBS="-ldl"
}

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=/wymedia/usr \
	--disable-all \
	--with-libxml-dir=../depends/libxml2/libxml2-2.7.8 \
	--enable-sockets \
	--enable-libxml \
	--enable-simplexml \
	--enable-json \
	--enable-hash \
	--enable-pdo \
	--with-pdo-sqlite \
	--with-sqlite3 \
	--with-config-file-path=/wymedia/usr/etc \
	--disable-ipv6"

BINARIES="php-cgi"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/sapi/cgi/php-cgi
}
