NAME="libxml2"

VERSION="2.8.0"

URL="ftp://xmlsoft.org/libxml2/libxml2-2.8.0.tar.gz"

SRCFILE="libxml2-2.8.0.tar.gz"

SRCDIR="libxml2-2.8.0"

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=`pwd`/libxml2-2.8.0 \
	--without-debug \
	--without-docbook \
	--without-python \
	--without-schemas \
	--without-schematron \
	--disable-ipv6"

POST_COMPILATION() {
	cd `pwd`/libxml2-2.8.0
	sh4-linux-strip `pwd`/.libs/libxml2.so.2.8.0
	make install
}

