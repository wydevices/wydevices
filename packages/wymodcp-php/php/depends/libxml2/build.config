NAME="libxml2"

VERSION="2.7.8"

URL="ftp://xmlsoft.org/libxml2/libxml2-sources-2.7.8.tar.gz"

SRCFILE="libxml2-sources-2.7.8.tar.gz"

SRCDIR="libxml2-2.7.8"

CONFIGUREFLAGS="--host=sh4-linux
	--prefix=`pwd`/libxml2-2.7.8"

POST_COMPILATION() {
	cd `pwd`/libxml2-2.7.8
	sh4-linux-strip `pwd`/.libs/libxml2.so.2.7.8
	make install
}

