NAME=fusesmb

VERSION=0.8.7

DEPENDS="fuse-2.8 samba"

URL="http://www.ricardis.tudelft.nl/~vincent/fusesmb/download/fusesmb-0.8.7.tar.gz"

SRCFILE="fusesmb-0.8.7.tar.gz"

SRCDIR="fusesmb-0.8.7"

CONFIGUREFLAGS="--host=sh4-linux \
	--prefix=/wymedia/usr \
	PKG_CONFIG_PATH=../depends/fuse-2.8/fuse-2.7.4:$PKG_CONFIG_PATH \
	CFLAGS=-I../depends/samba/samba-3.5.6/source3/include\ -I../depends/fuse-2.8/fuse-2.8.5/include \
	LDFLAGS=-L../depends/samba/samba-3.5.6/source3/bin\ -L../depends/fuse-2.8/fuse-2.8.5/lib/.libs \
	LIBS=-ltalloc\ -ltdb \
	NMBLOOKUP=yes"

BINARIES="fusesmb fusesmb.cache"

POST_COMPILATION() {
	sh4-linux-strip $SRCDIR/fusesmb
	sh4-linux-strip $SRCDIR/fusesmb.cache
}
